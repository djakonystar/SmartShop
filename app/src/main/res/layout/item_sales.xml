<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="8dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="8dp"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="@dimen/margin_half"
            android:layout_marginStart="@dimen/margin_half"
            android:id="@+id/dot"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/red_eclipse"/>

        <TextView
            android:layout_width="0dp"
            app:layout_constraintEnd_toStartOf="@id/tvPaymentInfo"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_32"
            android:id="@+id/tvClientName"
            app:layout_constraintStart_toEndOf="@id/dot"
            android:text="Jaqsibay Hakimov"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="@id/dot"
            android:layout_marginStart="@dimen/margin_half"
            android:textSize="18dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_half"
            app:layout_constraintEnd_toEndOf="@id/tvClientName"
            android:id="@+id/tvTotalPrice"
            app:layout_constraintStart_toEndOf="@id/dot"
            app:layout_constraintTop_toBottomOf="@id/tvClientName"
            android:text="1200000"
            android:textColor="@color/black"
            android:layout_marginStart="@dimen/margin_half"
            android:textSize="18dp"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DCDCDC"
            android:layout_margin="8dp"
            android:id="@+id/view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="@dimen/margin_32"
            app:layout_constraintTop_toBottomOf="@id/tvTotalPrice" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/tvPaymentInfo"
            android:text="Karta"
            android:textSize="18dp"
            android:layout_marginEnd="@dimen/margin_32"
            app:layout_constraintTop_toTopOf="@id/tvTotalPrice"
            app:layout_constraintBottom_toBottomOf="@id/tvTotalPrice"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_half"
            android:layout_marginEnd="@dimen/margin_half"
            app:layout_constraintEnd_toStartOf="@id/tvData"
            android:id="@+id/tvSailorName"
            app:layout_constraintStart_toEndOf="@id/dot"
            app:layout_constraintTop_toBottomOf="@id/view"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/margin_half"
            android:text="Bisenov Saliq"
            android:textColor="@color/black"
            android:layout_marginStart="@dimen/margin_half"
            android:textSize="18dp"/>


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/margin_standard"
            android:id="@+id/tvData"
            app:layout_constraintTop_toTopOf="@id/tvSailorName"
            app:layout_constraintBottom_toBottomOf="@id/tvSailorName"
            android:text="21.12.2021"
            android:textColor="@color/black"
            android:textSize="18dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>