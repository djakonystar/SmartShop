<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="HardcodedText">

    <androidx.cardview.widget.CardView
        android:id="@+id/btOne"
        android:layout_width="0dp"
        android:layout_height="96dp"
        app:cardCornerRadius="16dp">

        <TextView
            style="@style/myKeyboardItem1"
            android:background="@drawable/bg_mykeyboard_item"
            android:text="1" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/btTwo"
        android:layout_width="0dp"
        android:layout_height="96dp"
        app:cardCornerRadius="16dp">

        <TextView
            style="@style/myKeyboardItem1"
            android:background="@drawable/bg_mykeyboard_item"
            android:text="2" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/btThree"
        android:layout_width="0dp"
        android:layout_height="96dp"
        app:cardCornerRadius="16dp">

        <TextView
            style="@style/myKeyboardItem1"
            android:background="@drawable/bg_mykeyboard_item"
            android:text="3" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/btFour"
        android:layout_width="0dp"
        android:layout_height="96dp"
        app:cardCornerRadius="16dp"
        tools:ignore="MissingConstraints">

        <TextView
            style="@style/myKeyboardItem1"
            android:background="@drawable/bg_mykeyboard_item"
            android:text="4" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/btFive"
        android:layout_width="0dp"
        android:layout_height="96dp"
        app:cardCornerRadius="16dp">

        <TextView
            style="@style/myKeyboardItem1"
            android:background="@drawable/bg_mykeyboard_item"
            android:text="5" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/btSix"
        android:layout_width="0dp"
        android:layout_height="96dp"
        app:cardCornerRadius="16dp">

        <TextView
            style="@style/myKeyboardItem1"
            android:background="@drawable/bg_mykeyboard_item"
            android:text="6" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/btSeven"
        android:layout_width="0dp"
        android:layout_height="96dp"
        app:cardCornerRadius="16dp">

        <TextView
            style="@style/myKeyboardItem1"
            android:background="@drawable/bg_mykeyboard_item"
            android:text="7" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/btEight"
        android:layout_width="0dp"
        android:layout_height="96dp"
        app:cardCornerRadius="16dp">

        <TextView
            style="@style/myKeyboardItem1"
            android:background="@drawable/bg_mykeyboard_item"
            android:text="8" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/btNine"
        android:layout_width="0dp"
        android:layout_height="96dp"
        app:cardCornerRadius="16dp"
        tools:ignore="MissingConstraints">

        <TextView
            style="@style/myKeyboardItem1"
            android:background="@drawable/bg_mykeyboard_item"
            android:text="9" />
    </androidx.cardview.widget.CardView>


    <ImageView
        android:id="@+id/btFingerPrint"
        android:layout_width="0dp"
        android:layout_height="96dp"
        android:clickable="false"
        android:padding="12dp"
        android:src="@drawable/ic_fingerprint"
        android:visibility="invisible"
        tools:ignore="MissingConstraints" />

    <androidx.cardview.widget.CardView
        android:id="@+id/btZero"
        android:layout_width="0dp"
        android:layout_height="96dp"
        app:cardCornerRadius="16dp">

        <TextView
            style="@style/myKeyboardItem1"
            android:background="@drawable/bg_mykeyboard_item"
            android:text="0" />
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/btBackspace"
        android:layout_width="0dp"
        android:layout_height="96dp"
        android:padding="16dp"
        android:src="@drawable/ic_backspace" />

    <androidx.constraintlayout.helper.widget.Flow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/margin_small"
        app:constraint_referenced_ids="btOne,btTwo,btThree,
        btFour,btFive,btSix,btSeven,btEight, btNine, btFingerPrint,btZero,btBackspace"
        app:flow_horizontalGap="24dp"
        app:flow_maxElementsWrap="3"
        app:flow_verticalGap="24dp"
        app:flow_wrapMode="chain"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>