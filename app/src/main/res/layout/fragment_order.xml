<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:layout_width="40dp"
        android:id="@+id/btnBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_baseline_arrow_back_24"
        android:padding="8dp"
        android:background="?selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:layout_margin="@dimen/margin_standard"
        android:layout_height="40dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Savat"
        android:id="@+id/tvTitle"
        android:layout_marginTop="@dimen/margin_standard"
        android:textColor="@color/black"
        android:textSize="18dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_marginTop="8dp"
        tools:listitem="@layout/item_order_dialog"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        android:id="@+id/rvOrder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="@dimen/margin_32"
        app:layout_constraintTop_toBottomOf="@id/etSearchClient"
        app:layout_constraintBottom_toTopOf="@id/tvTotalPrice"
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:layout_width="0dp"
        android:id="@+id/etSearchClient"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_baseline_search_24"
        android:padding="12dp"
        android:background="@drawable/background_edit_text"
        android:elevation="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnAddClient"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        android:layout_margin="@dimen/margin_standard"/>
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="?selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginEnd="@dimen/margin_standard"
        android:src="@drawable/ic_baseline_person_add_alt_1_24"
        android:id="@+id/btnAddClient"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/etSearchClient"
        app:layout_constraintBottom_toBottomOf="@id/etSearchClient"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="21dp"
        android:text="Total price : 0"
        app:layout_constraintBottom_toTopOf="@id/btnOrder"
        app:layout_constraintStart_toStartOf="@id/etSearchClient"
        android:layout_marginBottom="@dimen/margin_standard"
        android:id="@+id/tvTotalPrice"/>

    <Button
        android:layout_width="0dp"
        android:id="@+id/btnOrder"
        android:layout_height="50dp"
        android:text="Zakaz qilish"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/margin_standard"
        android:layout_marginEnd="@dimen/margin_standard"
        android:layout_marginBottom="@dimen/margin_small"/>

</androidx.constraintlayout.widget.ConstraintLayout>