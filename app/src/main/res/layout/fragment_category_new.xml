<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <include
        android:id="@+id/actionBar"
        layout="@layout/action_bar" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/actionBar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilCategoryName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_standard"
                android:layout_marginTop="@dimen/margin_standard_middle"
                android:hint="Categoryaning nomi"
                app:endIconMode="clear_text"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etCategoryName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:maxLength="80"
                    android:singleLine="true" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilWholesalePrice"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_standard"
                android:hint="@string/wholesale_percent"
                app:endIconMode="clear_text"
                app:layout_constraintTop_toBottomOf="@id/tilCategoryName">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etWholesalePrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="19"
                    android:maxLines="1"
                    android:inputType="numberDecimal"
                    android:digits="0123456789 ,"
                    android:padding="@dimen/margin_standard"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_standard"
                    tools:ignore="SpUsage" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilMinPrice"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_standard"
                android:hint="@string/min_percent"
                app:endIconMode="clear_text"
                app:layout_constraintTop_toBottomOf="@id/tilWholesalePrice">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etMinPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="19"
                    android:maxLines="1"
                    android:inputType="numberDecimal"
                    android:digits="0123456789 ,"
                    android:padding="@dimen/margin_standard"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_standard"
                    tools:ignore="SpUsage" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilMaxPrice"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_standard"
                android:hint="@string/max_percent"
                app:endIconMode="clear_text"
                app:layout_constraintTop_toBottomOf="@id/tilMinPrice">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etMaxPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="19"
                    android:maxLines="1"
                    android:inputType="numberDecimal"
                    android:digits="0123456789 ,"
                    android:padding="@dimen/margin_standard"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_standard"
                    tools:ignore="SpUsage" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilMinQuantity"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_standard"
                android:hint="Minimum miqdori"
                app:endIconMode="clear_text"
                app:layout_constraintTop_toBottomOf="@id/tilMaxPrice">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etMinQuantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="19"
                    android:maxLines="1"
                    android:inputType="numberDecimal"
                    android:digits="0123456789 ,"
                    android:padding="@dimen/margin_standard"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_standard"
                    tools:ignore="SpUsage" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_standard"
                android:backgroundTint="@color/app_main_color"
                android:paddingVertical="@dimen/padding_standard_middle"
                android:text="@string/add_new_category"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_standard"
                app:cornerRadius="@dimen/margin_standard"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tilMinQuantity"
                tools:ignore="SpUsage" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>
